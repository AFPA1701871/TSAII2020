#include <stdio.h>
#include <stdlib.h>


int main()
{
   char c, str[100];
   int i, occurrence = 0;

   printf("Entrez une chaine de caracteres: ");
   gets(str);

   printf("Entrez un caractere: ");
   scanf("%c",&c);

   for(i = 0; str[i] != '\0'; ++i)
   {
       if(str[i] == c)
           ++occurrence;
   }

   printf("Le nombre d’occurrence de %c est %d", c, occurrence);
   return 0;
}
